<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Alice&family=Cormorant:wght@300&family=Poppins:wght@400;700&display=swap"
        rel="stylesheet">
    <style>
        * {
            font-family: Alice;
        }

        body {
            margin: 0;
            padding: 0;
            display: flex;
        }

        .container1 {
            flex: 0 0 20%;
            background-color: #f2f2f2;
            padding: 20px;
          
           

        }

        .container2 {
            flex: 0 0 80%;
            background-color: #e0e0e0;
            padding: 20px;
           
          
        }

        .image-container img {
            max-width: 100%;
            float: left;
            margin-right: 20px;
        }

        .image-container h4 {
            text-align: left;
            margin-left: 20px;

        }
        .image-container h1 {
            text-align: left;
            margin-left: 20px;

        }

        .image-container p {
            text-align: left;
            margin-bottom: 20px;
            margin-left: 20px;
        }
    </style>
</head>

<body>
    <div class="container1">
        <h1>
            <%= Response.name %>
        </h1>
        <p>
            <%= Response.email %>
        </p>
        <p>Account status : <%= Response.privilege %>
        </p>
        <p> Rating : <%= Response.rating %>
        </p>


    </div>
    <div class="container2">
        <h1>Articles</h1>
        <% Data.reverse().forEach(data=> { %>
            <% if(data.id==Response._id){%>
                <div class="image-container">

                    <img src="/<%= data.Image %>" height="250px" width="250px">
                    <%
                    const requestedTime = new Date(data.acceptedTime);
                %>

                <h4><%= requestedTime.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></h4>
                    <div class="text">
                        <h1>
                            <%= data.topic %>
                        </h1>

                        <p style="display: inline;">
                            <%= data.article.substr(0,500) + "..." %>
                        </p><a style="display: inline;" href="/view_more/<%= data._id %>">view more</a>
                    </div>
                    <div style="margin-bottom: 200px;"></div>
                </div>

            <% }%>
        <% }) %>
    </div>
</body>

</html>